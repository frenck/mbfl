ifneq	(,$(template_INSTLST))
	@$(INSTALL_DIR) $(INSTALL_ROOT)$(template_INSTDIR)
	@$(INSTALL_DATA) $(template_INSTLST) $(INSTALL_ROOT)$(template_INSTDIR)
