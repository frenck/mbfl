MOUNT_POINT=${1:?missing mount point parameter}

user-validate-directory "${MOUNT_POINT}" || return 1
if user-program-sudo-mount -o remount,rw "${MOUNT_POINT}" ; then
    exit 0
else
    user-message-error "remounting read-write partition '${MOUNT_POINT}'"
    exit 1
fi

### end of file
# Local Variables:
# mode: sh
# End:
