## Setup.
## ------------------------------------------------------------

source [file join [file dirname [info script]] setup.tcl]

#PAGE
## ---------------------------------------------------------
## Test namespace.
## ---------------------------------------------------------

namespace eval ::test {

    variable	libname [file join $libpath encode.sh]

    variable	precmd ". %s"
    set precmd [format $precmd $libname]


#PAGE

#  ::tcltest::test encode-1.1 "encoding" {
#      -body	{
#  	bash "_encode_hex ABC"
#      }
#      -result 414243
#  }

#PAGE

::tcltest::test encode-2.1 "decoding hex" {
    -body	{
	bash "mbfl_decode_hex 414243"
    }
    -result ABC
}

::tcltest::test encode-2.2 "decoding oct" {
    -body	{
	bash "mbfl_decode_oct 101102103"
    }
    -result ABC
}

#PAGE
## ---------------------------------------------------------
## End of "::test" namespace.
## ---------------------------------------------------------

::tcltest::cleanupTests
}
namespace delete ::test


