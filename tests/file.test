file-is-file-1.1 () {
    local PATHNAME=$(dotest-mkfile pathname)
    local result

    mbfl_file_is_file "${PATHNAME}"
    result=$?
    dotest-clean-files    
    return $result
}
file-is-file-1.2 () {
    mbfl_file_is_file a print_error 2>&1 | \
        dotest-output "$0: error: unexistent file 'a'"
}

