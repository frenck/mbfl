function script-6.1 () {
    script --one | dotest-output 'action one'
}
function script-6.2 () {
    script --two | dotest-output 'action two'
}
function script-6.3 () {
    script --three | dotest-output "action three, arguments: 0, ''"
}
function script-6.4 () {
    script --three a b c | dotest-output "action three, arguments: 3, 'a b c'"
}
function script-6.5 () {
    script --four a b c | dotest-output "action four, arguments: 3, 'a b c'"
}
function script-6.6 () {
    script --four a --verbose b c | \
        dotest-output "action four, arguments: 3, 'a b c'"
}

#page

function script-action-1.1 () {
    script_with_actions one green solid | dotest-output "action one green solid *"
}

