#PAGE
## ------------------------------------------------------------
## Setup.
## ------------------------------------------------------------

source setup.sh

function script () {
    MBFL_LIBRARY=${builddir}/libmbfl.sh $BASH ../examples/template.sh "$@"
}


#PAGE

function script-1.1 () {
    script --usage | dotest-output "usage: template.sh *"
}
function script-1.2 () {
    script --help | dotest-output "usage: template.sh *"
}
function script-1.3 () {
    script -h | dotest-output "usage: template.sh *"
}
function script-1.4 () {
    script --license | dotest-output "template.sh version *"
}
function script-1.5 () {
    script --version | dotest-output "template.sh version *"
}
function script-1.6 () {
    script --version-only | dotest-output 1.0
}

#PAGE

function script-2.1 () {
    script --beta=123 | dotest-output "option beta: 123\narguments: 0, ''"
}
function script-2.2 () {
    script --beta=123\\ | dotest-output "option beta: 123\\\narguments: 0, ''"
}
function script-2.3 () {
    script --beta="1 2" | dotest-output "option beta: 1 2\narguments: 0, ''"
}
function script-2.4 () {
    script --beta=123\\\\ | dotest-output "option beta: 123\\\\\narguments: 0, ''"
}
function script-2.5 () {
    script --alpha | dotest-output "option alpha\narguments: 0, ''"
}

#page

function script-3.1 () {
    script a b c | dotest-output "arguments: 3, 'a b c'"
}

#page

function script-4.1 () {
    script --list-exit-codes | dotest-output \
        "0 success\n1 failure\n20 program_not_found\n2 second_error\n8 eighth_error\n3 third_error\n3 fourth_error"
}
function script-4.2 () {
    script --print-exit-code=second_error | dotest-output 2
}
function script-4.3 () {
    script --print-exit-code=eighth_error | dotest-output 8
}
function script-4.4 () {
    script --print-exit-code=third_error | dotest-output 3
}
function script-4.5 () {
    script --print-exit-code=unexistent | dotest-output ""
}
function script-4.6 () {
    script --print-exit-code=success | dotest-output 0
}
function script-4.7 () {
    script --print-exit-code-names=1 | dotest-output "failure"
}
function script-4.8 () {
    script --print-exit-code-names=8 | dotest-output "eighth_error"
}
function script-4.9 () {
    script --print-exit-code-names=3 | dotest-output "third_error\nfourth_error"
}
function script-4.10 () {
    script --print-exit-code-names=0 | dotest-output "success"
}

#PAGE
## ---------------------------------------------------------
## End of "::test" namespace.
## ---------------------------------------------------------

dotest script-

