#PAGE
## ------------------------------------------------------------
## Setup.
## ------------------------------------------------------------

source setup.sh

function script () {
    $BASH ../examples/template.sh "$@"
}


#PAGE

function script-1.1 () {
    script --usage | dotest-output "usage: template.sh *"
}
function script-1.2 () {
    script --help | dotest-output "usage: template.sh *"
}
function script-1.3 () {
    script -h | dotest-output "usage: template.sh *"
}
function script-1.4 () {
    script --license | dotest-output "template.sh version *"
}
function script-1.5 () {
    script --version | dotest-output "template.sh version *"
}
function script-1.6 () {
    script --version-only | dotest-output 1.0
}

#PAGE

function script-2.1 () {
    script --beta=123 | dotest-output "option beta: 123"
}
function script-2.2 () {
    script --beta=123\\ | dotest-output "option beta: 123\\"
}
function script-2.3 () {
    script --beta="1 2" | dotest-output "option beta: 1 2"
}
function script-2.4 () {
    script --beta=123\\\\ | dotest-output "option beta: 123\\\\"
}
function script-2.5 () {
    script --alpha | dotest-output "option alpha"
}

#PAGE
## ---------------------------------------------------------
## End of "::test" namespace.
## ---------------------------------------------------------

dotest script-

