set -e
declare CATEGORY=${1:?'missing original CATEGORY-BRANCH-VERSION parameter'}
declare NEWBRANCH=${2:?'missing new BRANCH-VERSION parameter'}
declare NAME=`vc-program-gnu-arch-parse-package-name-print-category "${CATEGORY}"`

vc-program-gnu-arch-get "${CATEGORY}" "${NEWBRANCH}"
cd "${NEWBRANCH}"
vc-tree-make-branch-from-tree "${NAME}--${NEWBRANCH}"
exit 0

### end of file
